[user]
	name = Joel Hermanns
	email = joel.hermanns@gmail.com
[alias]
	co = checkout
    cm = commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
[color]
    diff = auto
    status = auto
    branch = auto
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green reverse
    whitespace = white reverse
[core]
	editor = vim
	autocrlf = input
[credential]
	helper = osxkeychain
[branch "master"]
    remote = origin
    merge = refs/heads/master
