[user]
	name = Joel Hermanns
	email = joel.hermanns@gmail.com
[alias]
	co = checkout
    cm = commit
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    st = status
[color]
    diff = auto
    status = auto
    branch = auto
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = green reverse
    whitespace = white reverse
[core]
	editor = emacsclient
	autocrlf = input
	excludesfile = ~/.gitignore_global
[credential]
	helper = osxkeychain
[branch "master"]
    remote = origin
    merge = refs/heads/master
[merge]
	tool = vimdiff
[push]
	default = simple
[url "git@github.com:"]
	insteadOf = https://github.com/
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
